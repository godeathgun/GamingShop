<!--Ads-->
<div class="avds">
    @foreach (var item in Model)
    {
        var url = "/detail/" + item.Product.MetaTitle + "-" + item.ID;
        <div class="avds">
            <div class="avds_background" style="background-image:url(@item.Image)"></div>
            <div class="avds_large_container">
                <div class="avds_large_content">
                    <div class="avds_title">@item.Product.Name</div>
                    <div class="avds_text">@item.Description</div>
                    <div class="avds_link avds_link_large"><a href="@url">See More</a></div>
                </div>
            </div>
        </div>
        <div>&nbsp;</div>
    }
</div>
