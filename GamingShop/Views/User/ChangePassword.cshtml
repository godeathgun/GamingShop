@model Model.EF.User

@{
    ViewBag.Title = "ChangePassword";
    Layout = "~/Views/Shared/_LayoutsCustomer.cshtml";
}

<div class="body-content">
    <header class="body-header"><h3 class="body-content__title heading--200">ChangePassword</h3></header><div class="row">
        <div class="col col-md-12">
            @using (Html.BeginForm("ChangePassword", "User", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                if(ViewBag.Success==true)
                {
                    <div>@ViewBag.Message</div>
                }
                <div class="form-group">
                    <div class="control-label col-md-3">Old Password</div>
                    <input type="password" name="password" class="form-control"/>
                </div>

                <div class="form-group">
                    <div class="control-label col-md-3">New Password</div>
                    <input type="password" name="newpassword" class="form-control"/>
                </div>

                <div class="form-group">
                    <div class="control-label col-md-3">Confirm Password</div>
                    <input type="password" name="confirmpassword" class="form-control"/>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Change Password" class="btn btn-primary" />
                    </div>
                </div>
            }
        </div>
    </div>
</div>