@model List<Model.EF.OrderDetail>

@{
    ViewBag.Title = "OrdersofCustomer";
    Layout = "~/Views/Shared/_LayoutsCustomer.cshtml";
}

<div class="body-content">
    <h4 class="body-content__subheader">Recent Orders</h4><div class="order-history"><p class="empty-state">You have no recent orders. View all orders <a href="/dashboard/orders">here</a>.</p><ol class="order-history__listing"></ol></div>
    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th scope="col">OrderID</th>
                <th scope="col">Product</th>
                <th scope="col">Quantity</th>
                <th scope="col">CreatedDate</th>
                <th scope="col">Price</th>
                <th scope="col">Status</th>
            </tr>
        </thead>
        <tbody>
            @{string[] Status = new string[6];
                Status[0] = "Chờ xác nhận";
                Status[1] = "Đã xác nhận";
                Status[2] = "Đang giao";
                Status[3] = "Thành công";
                Status[4] = "Đã hủy";
            }
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.OrderID</td>
                    <td>@item.Product.Name</td>
                    <td>@item.Quantity</td>
                    <td>@item.Order.CreatedDate</td>
                    <td>@item.Price</td>
                    <td>@Status[item.Order.Status]</td>
                    <td>
                        <a href="/User/ViewDetailOrder/@item.OrderID"> ViewDetail </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>